{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true
  },
  "include": [
    "vite.config.*",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"

    // "nested/**/*.ts",
    // "nested/**/*.d.ts",
    // "nested/**/*.tsx",
    // "nested/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
